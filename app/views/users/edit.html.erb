<div id="page-content">
    <h2 class="text-center" id="h2">Edit your profile</h2>
    <div class="container">
        <div class="row justify-content-md-center">
            <div class="col-10">
                <div class="card text-center shadow mb-3" id="article-card">
                    <div class=" card-header p-4 mb-3" id="card-header"></div>
                    <div class="card-body-new">
                        <%= render 'form'%>
                    </div>
                    <div class="card-footer p-4" id="card-footer">
                    </div>
                </div>
                <div class="row justify-content-md-center mb-3">
                    <%=link_to '[ Cancel and return to Homepage ]', root_path, class: "btn btn-warning mt-2"%>
                </div>
            </div>
        </div>
    </div>
</div>

<footer id="sticky-footer" class="bg-dark text-white">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><%= link_to "Home", root_path%></li>
            <li class="breadcrumb-item"><%= link_to "Bloggers", users_path%></li>
            <li class="breadcrumb-item active" aria-current="page">Edit <%="#{@user.username}"%>'s profile</li>
        </ol>
    </nav>
    <%= render 'layouts/copyright' %>
</footer>