<div id="page-content-show-u">
    <h2 class="text-center text-light m-4">
        <%= @user.username%>'s profile
    </h2>
    <div class="container mt-2 mb-3">
        <div class="row justify-content-md-center">
            <div class="col-5 mb-2">
                <div class="card text-center shadow mb-3" id="article-card">
                    <div class="card-header font-italic font-weight-bold" id="card-header">
                        <%= @user.username%>'s profile
                        <div class="card-img-top-left m-4 zoom">
                            <%= gravatar_for @user, size: 130%>
                        </div>
                    </div>

                    <%if logged_in? && @user == current_user%>
                    <div class="text-center">
                        <%= link_to "Edit your profile", edit_user_path(@user), class: "btn btn-outline-success m-2" %>
                    </div>
                    <%end%>
                    <div class="card-body" id="card-body-u">
                        <h5 class="card-title">
                            Your profile info
                        </h5>
                    </div>
                </div>
                <div class="row justify-content-md-center">
                    <%=link_to '[ Return to all bloggers ]', users_path, class: "btn btn-info m-2"%>
                    <%=link_to '[ Return to homepage ]', root_path, class: "btn btn-warning m-2"%>
                </div>
            </div>
        </div>
    </div>
</div>

<div id="page-content-show_u_articles">
    <h2 class="text-center text-light p-2">
        <div class="mt-3">
            <%= @user.username%>'s articles
        </div>
    </h2>
    <div class="flickr_pagination">
        <div class="page_info mb-3">
            <%= will_paginate @articles, :container => false %>
        </div>
    </div>
    <%= render 'articles/article' %>
    <div class="flickr_pagination">
        <div class="page_info mb-3">
            <%= will_paginate @articles, :container => false %>
        </div>
    </div>
</div>
<footer id="sticky-footer" class="bg-dark text-white">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><%= link_to "Home", root_path%></li>
            <li class="breadcrumb-item"><%= link_to "Bloggers", users_path%></li>
            <li class="breadcrumb-item active" aria-current="page">Show profile</li>
        </ol>
    </nav>
    <%= render 'layouts/copyright' %>
</footer>