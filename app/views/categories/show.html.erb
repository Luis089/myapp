<div id="page-content-show-u">
    <h2 class="text-center text-light mt-4">
        Category: <%= @category.name%>
    </h2>
    <%if logged_in? &&  current_user.admin?%>
    <div class="text-center mb-2">
        <%= link_to "Edit category name", edit_category_path(@category), class: "btn btn-outline-success m-2" %>
    </div>
    <%end%>
</div>

<div id="page-content-show_u_articles">
    <h2 class="text-center text-light p-2">
        <div class="mt-3">
            Articles
        </div>
    </h2>
    <div class="flickr_pagination">
        <div class="page_info mb-3">
            <%= will_paginate @articles, :container => false %>
        </div>
    </div>
    <%= render 'articles/article' %>
    <div class="flickr_pagination">
        <div class="page_info mb-2">
            <%= will_paginate @articles , :container => false %>
        </div>
    </div>
    <div class="row justify-content-md-center">
        <%=link_to '[ Return to all categories ]', categories_path, class: "btn btn-info m-3"%>
        <%=link_to '[ Return to homepage ]', root_path, class: "btn btn-warning m-3"%>
    </div>
</div>

<footer id="sticky-footer" class="bg-dark text-white">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><%= link_to "Home", root_path%></li>
            <li class="breadcrumb-item"><%= link_to "Categories", categories_path%></li>
            <li class="breadcrumb-item active" aria-current="page">Show Category</li>
        </ol>
    </nav>
    <%= render 'layouts/copyright' %>
</footer>