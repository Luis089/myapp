<div id="page-content">
    <h2 class="text-center" id="h2">Edit article</h2>
    <div class="container">
        <div class="row justify-content-md-center">
            <div class="col-8">
                <div class="card text-center shadow mb-3" id="article-card">
                    <div class="card-header font-italic" id="card-header">
                        by <%= @article.user.username%>
                    </div>
                    <div class="card-body">
                        <%= render 'form', class: "justify-content-md-center"%>
                    </div>
                    <div class="card-footer text-muted" id="card-footer">
                        <small>Created <%= time_ago_in_words(@article.created_at) %> ago -
                            Edited <%= time_ago_in_words(@article.updated_at) %> ago
                        </small>
                    </div>
                </div>
                <div class="row justify-content-md-center mb-3">
                    <%=link_to '[ Cancel and return to articles listing ]', articles_path, class: "btn btn-warning"%>
                </div>
            </div>
        </div>
    </div>
</div>

<footer id="sticky-footer" class="bg-dark text-white">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><%= link_to "Home", root_path%></li>
            <li class="breadcrumb-item"><%= link_to "Articles", articles_path%></li>
            <li class="breadcrumb-item active" aria-current="page">Edit: <%="#{@article.title}"%></li>
        </ol>
    </nav>
    <%= render 'layouts/copyright' %>
</footer>