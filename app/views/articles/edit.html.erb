<h1 class="text-center mt-4">Edit article</h1>
<div id="page-content">
    <div class="row justify-content-md-center">
        <div class="col-8 mt-4">
            <div class="card text-center shadow mb-3 bg-white rounded">
                <div class="card-header font-italic" id="card-header">
                    by Luis Holzer
                </div>
                <div class="card-body">
                    <%= render 'form', class: "justify-content-md-center"%>
                </div>
                <div class="card-footer text-muted" id="card-footer">
                    <small>Created <%= time_ago_in_words(@article.created_at) %> ago -
                        Edited <%= time_ago_in_words(@article.updated_at) %> ago
                    </small>
                </div>
            </div>
            <div class="row justify-content-md-center mb-3">
                <%=link_to '[ Cancel and return to articles listing ]', articles_path, class: "btn btn-outline-success"%>
            </div>
        </div>
    </div>
</div>
<footer id="sticky-footer" class="bg-dark text-white">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><%= link_to "Home", root_path%></li>
            <li class="breadcrumb-item"><%= link_to "Articles", articles_path%></li>
            <li class="breadcrumb-item active" aria-current="page">Edit Article</li>
        </ol>
    </nav>
    <div class="container text-center">
        <small>Copyright &copy; <%= link_to 'Luis Holzer' %></small>
    </div>
</footer>