<%= render 'shared/errors', obj: @article %>
<div class="container">
    <div class="row justify-content-center">
        <div class="col-12">
            <%= form_with(model: @article, local: true)  do |f| %>
            <div class="form-group row">
                <%= f.label :title, class:"col-2 col-form-label" %>
                <div class="col-10">
                    <%= f.text_field :title, class: "form-control shadow rounded", placeholder:"Title"%>
                </div>
            </div>
            <div class="form-group row">
                <%= f.label :description, class:"col-2 col-form-label" %>
                <div class="col-10">
                    <%= f.text_area :description, rows:4, class: "form-control shadow rounded", placeholder:"Description"%>
                </div>
            </div>

            <div class="form-group row">
                <%= f.label :category, class:"col-2 col-form-label" %>
                <div class="col-10">
                    <%= f.collection_select(:category_ids, Category.all, :id, :name, 
                { promt: "Make your selection from the list below (can be empty)" }, {multiple: true}) %>
                </div>
            </div>

            <div class="form-group row justify-content-center">
                <%=f.submit class:"btn btn-outline-info mt-3"%>
            </div>
            <% end %>
        </div>
    </div>
</div>